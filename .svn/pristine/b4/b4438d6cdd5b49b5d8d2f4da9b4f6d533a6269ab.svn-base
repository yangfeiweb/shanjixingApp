import React from "react";
import { ScrollView, View, Text, StyleSheet } from "react-native";

import { Button } from "native-base";
import Icon from "react-native-vector-icons/FontAwesome";
import commonStyle from "../globalStyle";
import { utility } from "../utility";

import PopupDialog, {
  DialogTitle,
  SlideAnimation
} from "react-native-popup-dialog";

const slideAnimation = new SlideAnimation({ slideFrom: "bottom" });

export default class extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
      learned: false
    };
  }
  show(learned) {
    if (learned) {
      this.setState({
        learned: true
      });
    }
    this.refs.popDialog.show();
  }
  hide() {
    this.refs.popDialog.dismiss();
  }
  render() {
    return (
      <PopupDialog
        ref="popDialog"
        width={400}
        height={300}
        dismissOnTouchOutside={false}
        dismissOnHardwareBackPress={false}
        dialogTitle={
          <DialogTitle
            titleStyle={{
              backgroundColor: commonStyle.color.primary,
              color: "#fff"
            }}
            titleTextStyle={{ color: "#fff" }}
            title="系统提示"
          />
        }
        dialogAnimation={slideAnimation}
      >
        <View style={styles.dialogBody}>
          <Text style={styles.descText}>
            该系统当前时间不准确，请设置正确的时间和时区！
          </Text>
          <Text style={styles.descText}>以便更精确的记录学习过程！</Text>
          <Text style={styles.descText}>
            当前服务器时间:{this.props.serverTime}
          </Text>
          <View style={styles.dialogBtns}>
            <Button
              style={[
                styles.btn,
                {
                  backgroundColor: commonStyle.color.primary
                }
              ]}
              onPress={() => {
                let localDate = Date.now();
                let serverDate = utility.timeStrToObj(this.props.serverTime);

                if (Math.abs(serverDate - localDate) > 3600000) {
                  utility.Toast("当前时间不准确，请重新设置系统时间或时区！");
                } else {
                  this.refs.popDialog.dismiss();
                }
              }}
            >
              <Text
                style={[
                  styles.btnText,
                  {
                    color: "#fff"
                  }
                ]}
              >
                已设置，开始学习
              </Text>
            </Button>
          </View>
        </View>
      </PopupDialog>
    );
  }
}

const styles = StyleSheet.create({
  dialogBody: {
    padding: 10,
    flex: 1,
    position: "relative"
  },
  descText: {
    lineHeight: 40,
    fontSize: 16,
    alignSelf: "center",
    marginBottom: 10
  },
  dialogBtns: {
    position: "absolute",
    bottom: 10,
    width: 400,
    height: 60,
    flexDirection: "row",
    justifyContent: "space-around"
  },
  btn: {
    width: 200,
    height: 50,
    borderRadius: 10,
    justifyContent: "center"
  },
  btnText: {
    fontSize: 18
  }
});
